<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.macrosystem.cobranzasmoviles">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icono_cobranzas"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuPrincipal" />

        <activity
            android:name=".SuspensionesRestantesActivity"
            android:label="@string/title_activity_suspensiones"
            android:parentActivityName=".MenuPrincipal"
            android:theme="@style/AppTheme" >
            <!--Soporte para versiones 4.0 o menores -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuPrincipal">
            </meta-data>
        </activity>

        <activity android:name=".form_suspensiones_Activity"
            android:parentActivityName=".SuspensionesRestantesActivity">
            <!--Soporte para versiones 4.0 o menores -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SuspensionesRestantesActivity">
            </meta-data>
        </activity>
    </application>

</manifest>