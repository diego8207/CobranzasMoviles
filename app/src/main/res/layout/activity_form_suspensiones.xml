<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_form_suspensiones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.macrosystem.cobranzasmoviles.vista.form_suspensiones_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/form_suspensiones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardFormSuspensiones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/linearLayoutCardContentFormSusp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbarCardFormSuspensiones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary"
                        app:popupTheme="@style/Theme.AppCompat.Light"
                        app:subtitleTextAppearance="@style/Card.Subtitle"
                        app:theme="@style/Toolbar"
                        android:padding="1dp"
                        app:titleTextAppearance="@style/Card.Title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No. Proceso: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtProceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No. Medidor: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtMedidor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre suscriptor: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtSuscriptor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dirección: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ciclo: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtCiclo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Municipio: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtMunicipio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>





                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha actividad: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtfecha_actividad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo actividad: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtTipoActividad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Código acción: "
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtCodAccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción acción: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:id="@+id/textView" />

                    <TextView
                        android:id="@+id/txtDescAccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Código Técnico: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtCodTecnico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Glosa: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtGlosa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_sticker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/form_margin_top"
                        android:hint="@string/lbl_sticker"
                        android:padding="10dp"
                        app:errorTextAppearance="@style/AppTheme.EditTextError">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtSticker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:id="@+id/etiqueta_estado_sticker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Estado del sticker:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/rgbOpciones_estado_sticker"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbtn_estado_roto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="Roto"/>

                        <RadioButton
                            android:id="@+id/rbtn_estado_No_instal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="No instalado"/>

                        <RadioButton
                            android:id="@+id/rbtn_estado_sin_diligen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="Sin diligenciar"/>

                    </RadioGroup>

                    <TextView
                        android:id="@+id/error_estado_sticker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_sello_serial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/form_margin_top"
                        android:hint="@string/lbl_sello_serial"
                        app:errorTextAppearance="@style/AppTheme.EditTextError">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtSelloSerial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"/>

                    </android.support.design.widget.TextInputLayout>

                    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                        android:id="@+id/spnr_estado_sello"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Estado del Sello"
                        android:layout_margin="10dp"
                        android:textColorHint="#05ab9a"
                        app:met_floatingLabel="normal" />



                    <TextView
                        android:id="@+id/error_Opciones_estado_sello"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/etiquetamatricula_medidor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="¿Coinciden matricula y numero de medidor?"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RadioGroup
                        android:id="@+id/rdgOpciones_matricula_medidor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbtn_si_matr_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="Si"/>

                        <RadioButton
                            android:id="@+id/rbtn_no_matr_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="No"/>

                        <RadioButton
                            android:id="@+id/rbtn_no_aplica_matr_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="No aplica"/>

                    </RadioGroup>

                    <TextView
                        android:id="@+id/error_Opciones_matricula_medidor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/rdgMatricula_pago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="¿Matricula con pago?"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/rgbOpciones_matricula_pago"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbtn_mcp_si"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="Si"/>

                        <RadioButton
                            android:id="@+id/rbtn_mcp_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="No"/>

                        <RadioButton
                            android:id="@+id/rbtn_mcp_no_aplica"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="No aplica"/>

                    </RadioGroup>

                    <TextView
                        android:id="@+id/error_Opciones_matricula_pago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/etiqueta_tiene_luz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="¿Tiene energía?"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/rdgOpciones_tiene_luz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbtn_luz_si"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="Si"/>

                        <RadioButton
                            android:id="@+id/rbtn_luz_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="No"/>

                        <RadioButton
                            android:id="@+id/rbtn_luz_no_aplica"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:text="No aplica"/>

                    </RadioGroup>

                    <TextView
                        android:id="@+id/error_Opciones_tiene_luz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"/>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_lectura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/form_margin_top"
                        android:hint="Lectura"
                        app:errorTextAppearance="@style/AppTheme.EditTextError">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtLectura"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_nom_contacto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/form_margin_top"
                        android:hint="Nombre del contacto"
                        app:errorTextAppearance="@style/AppTheme.EditTextError">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtNom_contacto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"/>

                    </android.support.design.widget.TextInputLayout>



                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_tel_celular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/form_margin_top"
                        android:hint="Teléfono celular"
                        app:errorTextAppearance="@style/AppTheme.EditTextError">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtTel_celular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_Observacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="@dimen/form_margin_top"
                        android:hint="Observaciones"
                        app:errorTextAppearance="@style/AppTheme.EditTextError">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/txtObservaciones"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"/>

                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:id="@+id/etiqueta_rechazo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Rechazo"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/rdgOpciones_rechazo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbtn_rechazo_si"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="Si"/>

                        <RadioButton
                            android:id="@+id/rbtn_rechazo_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_marginRight="12dp"
                            android:text="No"/>

                    </RadioGroup>

                    <TextView
                        android:id="@+id/error_Opciones_rechazo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/etiqueta_proveedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Proveedor: "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/txtProveedor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/etiqueta_fecha_carga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Fecha de Carga: "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/txtfechaCarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/etiqueta_txtProveedorGPS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Proveedor Localización: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:padding="10dp"/>


                    <TextView
                        android:id="@+id/etiqueta_txtLatitudGPS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />




                    <TextView
                        android:id="@+id/etiqueta_txtLongitudGPS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium" />




                    <Button
                        android:id="@+id/btnRegistrar"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Registrar"
                        android:layout_marginTop="50dp"
                        android:theme="@style/MiRaisedButton"
                        android:textSize="20sp"
                        tools:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </ScrollView>



    </LinearLayout>


</LinearLayout>
