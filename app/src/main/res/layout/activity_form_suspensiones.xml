<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_form_suspensiones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.macrosystem.cobranzasmoviles.form_suspensiones_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/form_suspensiones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardFormSuspensiones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/linearLayoutCardContentFormSusp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbarCardFormSuspensiones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/teal"
                        app:popupTheme="@style/Theme.AppCompat.Light"
                        app:subtitleTextAppearance="@style/Card.Subtitle"
                        app:theme="@style/Toolbar"
                        android:padding="2dp"
                        app:titleTextAppearance="@style/Card.Title" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No. Proceso: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtProceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No. Medidor: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtMedidor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre suscriptor: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtSuscriptor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ciclo: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtCiclo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Municipio: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtMunicipio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dirección: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha actividad: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtfecha_actividad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo actividad: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtTipoActividad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción acción: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtDescAccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Glosa: "
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtGlosa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"/>







                </LinearLayout>

            </android.support.v7.widget.CardView>

        </ScrollView>



    </LinearLayout>



</LinearLayout>
